<body class="bg-gray-100">
    <header>
        <nav class="bg-white border-b  fixed w-full z-10">
            <div class=" mx-auto px-2 sm:px-4 lg:px-8">
                <div class="flex justify-between h-12">
                    <div class="flex px-2 items-center">

                        <%= if @current_user do %>
                        <%= link to: "/menu" do %>
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h6a1 1 0 110 2H4a1 1 0 01-1-1z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <% end %>
                        <% end %>


                        <%= link "Shlinked", to: (if @current_user, do: "/", else: "/join"), class: "text-xs text-blue-700 font-semibold" %>
                    </div>
                    <div class="ml-4 mr-2 flex items-center text-gray-500">
                        <%= render "_user_menu.html", assigns %>
                    </div>
                </div>
            </div>
        </nav>

    </header>



    <div class="pt-12 pb-6">
        <%= @inner_content %>

    </div>

    <header>

        <nav class="sm:hidden bg-white border-t text-gray-500 text-base bottom-0 fixed w-full z-10">

            <div class="flex justify-around h-16 items-top   text-xs">
                <%= if @profile != nil and @profile != %Shlinkedin.Profiles.Profile{} do %>
                <%= render "_footer_nav.html", assigns %>
                <% end %>
            </div>
        </nav>

    </header>
</body>

</html>
