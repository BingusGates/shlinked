 <div id="article-<%= @id %>" class="px-5 leading-none relative">
     <span class="absolute left-2 top-1.5 h-1.5 w-1.5 rounded-full ring-2 ring-white bg-blue-400 mr-1.5"></span>
     <%# Top row: headline and clap and dot %>
     <div class="flex justify-between">
         <div>
             <p class=" font-semibold text-xs">
                 <%= @article.headline %>
             </p>
         </div>
         <div class="">
             <button phx-click="clap" phx-target="<%= @myself %>" type="button" phx-value-id="<%= @id %>"
                 class="  cursor-pointer ">
                 <span class="h-5 w-5 hover:bg-gray-100 rounded-full px-1.5 py-1">üëè</span></button>
         </div>
     </div>
     <%# second row: time and upvotes %>
     <div class=" inline-flex text-gray-500 text-xs">
         <span>
             <%= Timex.from_now(@article.inserted_at)%> ‚Ä¢ </span>


         <%= live_patch to: Routes.post_index_path(@socket, :show_votes, @article.id) do %>

         <span class="pl-1 <%= if @spin == true, do: "animate-spin" %> "> <%= length(@article.votes)%>
             claps </span>
         <span><%= if @article.profile_id == @profile.id, do: link "‚Ä¢ Delete", to: "#", phx_click: "delete-article", class: "hover:text-gray-600", phx_value_id: @article.id, data: [confirm: "Are you sure?"] %></span>
         </p>

         <% end %>
     </div>
 </div>
